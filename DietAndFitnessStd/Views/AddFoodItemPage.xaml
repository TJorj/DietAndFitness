<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DietAndFitness.AddFoodItemPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand">
            <SearchBar Placeholder="What are you eating?" TextChanged="SearchBar_TextChanged"/>
            <ListView ItemTapped="ListView_ItemTapped" x:Name="AddFoodList"/>
            <Grid HorizontalOptions="CenterAndExpand">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Text="Quantity" x:Name="QuantityLabel" Grid.Row="0" Grid.Column="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />
                <Entry HorizontalOptions="CenterAndExpand" x:Name="QuantityTextBox" Grid.Row="0" Grid.Column="1" VerticalOptions="CenterAndExpand"/>
                <Button Text="Add" x:Name="AddFoodButton" HorizontalOptions="CenterAndExpand" Clicked="AddFoodButton_Clicked" Grid.Row="0" Grid.Column="2"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>